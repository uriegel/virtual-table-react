{
  "name": "virtual-table-react",
  "version": "1.1.0",
  "description": "A virtual list view implementation with multiple columns",
  "author": "uriegel",
  "license": "MIT",
  "repository": "uriegel/virtual-table-react",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsc && microbundle-crl watch --no-compress --format modern,cjs",
    "build": "tsc && microbundle-crl --no-compress --format modern,cjs && copyfiles -f  src/index.d.ts dist",
    "prepare": "run-s build",
    "predeploy": "cd example && npm install && npm run build"
  },
  "peerDependencies": {
    "react": "^17.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.2"
  }
}
